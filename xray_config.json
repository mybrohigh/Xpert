{
    "log": {
        "loglevel": "warning"
    },
    "routing": {
        "rules": [
            {
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "BLOCK",
                "type": "field"
            }
        ]
    },
    "inbounds": [
        {
            "tag": "Shadowsocks TCP",
            "listen": "0.0.0.0",
            "port": 1080,
            "protocol": "shadowsocks",
            "settings": {
                "clients": [],
                "network": "tcp,udp"
            }
        },
        {
            "tag": "VLESS-XHTTP-NOTLS",
            "listen": "0.0.0.0",
            "port": 2027,
            "protocol": "vless",
            "settings": {
                "clients": [],
                "decryption": "none",
                "fallbacks": []
            },
            "sniffing": {
                "destOverride": [
                    "http",
                    "tls",
                    "quic",
                    "fakedns"
                ],
                "enabled": true
            },
            "streamSettings": {
                "network": "xhttp",
                "security": "none",
                "xhttpSettings": {
                    "headers": {},
                    "host": "",
                    "mode": "packet-up",
                    "noSSEHeader": false,
                    "path": "/",
                    "scMaxBufferedPosts": 30,
                    "scMaxEachPostBytes": "1000000",
                    "xPaddingBytes": "100-1000"
                }
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "tag": "DIRECT"
        },
        {
            "protocol": "blackhole",
            "tag": "BLOCK"
        }
    ]
}